  "sampleCode": [
    "#include <stdio.h>",
    "",
    "int count;",
    "char teamA, teamB;",
    "",
    "int gameArr[3] = {0};",
    "int scoreArr[3] = {0};",
    "",
    "int scoreA, scoreB;",
    "",
    "int maxIndex(int (*arr)[]);",
    "",
    "int main() {",
    "  scanf(\"%d\", &count);",
    "  getchar();",
    "",
    "  while (count-- > 0) {",
    "    scanf(\"%c %c\", &teamA, &teamB);",
    "    getchar();",
    "",
    "    int aTotal = 0, bTotal = 0;",
    "",
    "    for (int i=0; i<4 ; i++) {",
    "      scanf(\"%d %d\", &scoreA, &scoreB);",
    "      getchar();",
    "",
    "      aTotal += scoreA;",
    "      bTotal += scoreB;",
    "    }",
    "",
    "    if (aTotal > bTotal) {",
    "      gameArr[teamA-'A'] += 1;",
    "    } else {",
    "      gameArr[teamB-'A'] += 1;",
    "    }",
    "",
    "    scoreArr[teamA-'A'] += aTotal;",
    "    scoreArr[teamB-'A'] += bTotal;",
    "  }",
    "",
    "  int winner = maxIndex(&gameArr);",
    "  printf(\"%c %d\\n\", winner + 'A', scoreArr[winner]);",
    "",
    "  return 0;",
    "}",
    "",
    "int maxIndex(int (*arr)[]) {",
    "  int index=0;",
    "",
    "  for(int i=0; i<3 ; i++) {",
    "    if ( (*arr)[i] > (*arr)[index] ) {",
    "      index = i;",
    "    }",
    "  }",
    "",
    "  return index;",
    "}"
  ]
