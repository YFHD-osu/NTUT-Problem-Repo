  "sampleCode": [
    "#include <stdio.h>",
    "",
    "float _playerX = 0.0;",
    "float _playerY = 0.0;",
    "",
    "float convertPts(char card[]) {",
    "  if (card[1] == '0') {",
    "    return 10;",
    "  }",
    "",
    "  switch (card[0]) {",
    "    case 'A':",
    "      return 1.0;",
    "    ",
    "    case 'J':",
    "    case 'Q':",
    "    case 'K':",
    "      return .5;",
    "",
    "    default:",
    "      return (float) (card[0] - '0');",
    "  }",
    "}",
    "",
    "void prettyPrint(float num) {",
    "  if (num == (int) num) {",
    "    printf(\"%.0f\\n\", num);",
    "    return;",
    "  }",
    "",
    "  printf(\"%.1f\\n\", num);",
    "}",
    "",
    "char buf[2];",
    "",
    "int main() {",
    "  for (int i=0; i<3 ; i++) {",
    "    scanf(\"%s\", &buf);",
    "    _playerX += convertPts(buf);",
    "    // printf(\"%f\\n \", _playerX);",
    "  }",
    "",
    "  for (int i=0; i<3 ; i++) {",
    "    scanf(\"%s\", &buf);",
    "    _playerY += convertPts(buf);",
    "  }",
    "",
    "  _playerX = (_playerX > 10.5) ? 0 : _playerX;",
    "  _playerY = (_playerY > 10.5) ? 0 : _playerY;",
    "",
    "  prettyPrint(_playerX);",
    "  prettyPrint(_playerY);",
    "",
    "  if (_playerX == _playerY) {",
    "    printf(\"Tie\\n\");",
    "    return 0;",
    "  }",
    "",
    "  if (_playerX > _playerY) {",
    "    printf(\"X Win\\n\");",
    "    return 0;",
    "  }",
    "  ",
    "  printf(\"Y Win\\n\");",
    "  return 0;",
    "}"
  ]
}