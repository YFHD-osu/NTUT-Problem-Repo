  "sampleCode": [
    "import math",
    "",
    "def main() -> None:",
    "  a = int(input())",
    "  b = int(input())",
    "  c = int(input())",
    "  ",
    "  x1 = ((-b)+math.sqrt(b*b-4*a*c))/(2*a)",
    "  x2 = ((-b)-math.sqrt(b*b-4*a*c))/(2*a)",
    "",
    "  if (x1 == x2):",
    "    print(\"%.1f\"%x1)",
    "  else:",
    "    print(\"%.1f\\n%.1f\"%(x1, x2))",
    "",
    "if __name__ == \"__main__\": main()"
