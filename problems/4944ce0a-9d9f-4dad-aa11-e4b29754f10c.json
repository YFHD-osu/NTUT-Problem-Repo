  "sampleCode": [
    "#include <stdio.h>",
    "",
    "int charToBin(char (*c)[8]) {",
    "  int _sum = 0;",
    "",
    "  for (int i=0; i<8 ; i++) ",
    "    _sum += ((*c)[i] == '1' ? 1 : 0) * 1 << (7-i);",
    "  ",
    "  return _sum;",
    "}",
    "",
    "void binToChar(int a, char (*c)[5]) {",
    "  int _sum = 0;",
    "",
    "  for (int i=0; i<4 ; i++) {",
    "    (*c)[3-i] = (a % 2) ? '1' : '0';",
    "    a >>= 1;",
    "  }",
    "",
    "  (*c)[4] = '\\0';",
    "  ",
    "}",
    "",
    "int circuit(int M, int depth) {",
    "  if (M <= 1)",
    "    return depth;",
    "",
    "  if (M % 2) ",
    "    return circuit((M+1)/2, depth+1);",
    "  ",
    "  return circuit(M/2, depth+1);",
    "}",
    "",
    "int main() {",
    "  char buf[8], ans[5];",
    "",
    "  scanf(\"%s\", &buf);",
    "  getchar();",
    "",
    "  do {",
    "    int dec = charToBin(&buf);",
    "    int num = circuit(dec, 0);",
    "    binToChar(num, &ans);",
    "    printf(\"%s\\n\", ans);",
    "",
    "    scanf(\"%s\", &buf);",
    "    getchar();",
    "  } while (buf[0] != '-');",
    "",
    "  return 0;",
    "}",
    "",
    "",
    ""
  ]
